{
  "name": "brAInwav Development Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspace",
  
  // Robust startup sequence
  "initializeCommand": "bash scripts/fix_docker_env.sh",
  "onCreateCommand": "echo 'Container created successfully'",
  "postCreateCommand": "bash scripts/setup_dev_env.sh",
  "postStartCommand": "echo 'Development environment ready'",
  
  // Development ports
  "forwardPorts": [8000, 8080, 5432],
  "portsAttributes": {
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    }
  },
  
  // Environment variables
  "containerEnv": {
    "PYTHONPATH": "/workspace/backend",
    "ENVIRONMENT": "development"
  },
  
  // Mounts for persistent data
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "1password.op-vscode",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "streetsidesoftware.code-spell-checker",
        "pkief.material-icon-theme",
        "johnpapa.peacock",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "humao.rest-client",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "codezombiech.gitignore",
        "docker.docker",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-containers",
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
