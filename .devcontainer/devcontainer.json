{
  "name": "AI Engineering Roadmap",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",
  "workspace": "/workspace/ai-engineering-roadmap.code-workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "1password.op-vscode",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "streetsidesoftware.code-spell-checker",
        "pkief.material-icon-theme",
        "johnpapa.peacock",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "humao.rest-client",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "codezombiech.gitignore",
        "docker.docker",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-containers",
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "postCreateCommand": "uv pip install --system --no-cache-dir -r /workspace/backend/dev-requirements.txt && if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then pre-commit install; else echo 'Not a git repo, skipping pre-commit install.'; fi"
}
