{
  "name": "brAInwav MAS Project",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspace/ai-engineering-roadmap",
  "customizations": {
    "vscode": {
      "extensions": [
        // --- CORE ESSENTIALS ---
        "github.copilot",
        "github.copilot-chat",
        "1password.op-vscode",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "streetsidesoftware.code-spell-checker",
        "pkief.material-icon-theme",
        "johnpapa.peacock",

        // --- PYTHON (The Modern Stack) ---
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",

        // --- FRONTEND ---
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Vue.volar",

        // --- WEB & API ---
        "humao.rest-client",

        // --- GITHUB & DEVOPS ---
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "codezombiech.gitignore",

        // --- CONTAINERS & INFRA ---
        "docker.docker",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-containers",
        "redhat.vscode-yaml",
        "mikestead.dotenv",

        // --- DOCUMENTATION ---
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  // This command now ONLY handles tasks to be run after the container is ready.
  "postCreateCommand": "uv pip install --system --no-cache-dir -r /workspace/backend/dev-requirements.txt && if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then pre-commit install; else echo 'Not a git repo, skipping pre-commit install.'; fi"
}
