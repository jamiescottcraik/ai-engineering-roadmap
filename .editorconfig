# .editorconfig
# This file helps maintain consistent coding styles across different editors and IDEs.
# EditorConfig settings are read top to bottom, so settings in more specific sections
# (like [*.py]) will override settings in broader sections ([*]).

# --- Global Settings ---
# Apply to all files unless overridden by more specific sections.
[*]
charset = utf-8
end_of_line = lf      # Use LF (Line Feed) for line endings (Unix-style)
insert_final_newline = true # Ensure files end with a single newline character
trim_trailing_whitespace = true # Remove any whitespace characters at the end of lines

# --- Python Specific Settings ---
# These settings apply to all Python files (.py).
[*.py]
indent_style = space
indent_size = 4       # Consistent with Black's default for Python

# --- Markdown Specific Settings ---
# These settings apply to all Markdown files (.md).
[*.md]
trim_trailing_whitespace = false # Often helpful to disable for Markdown for newlines
insert_final_newline = false     # Allow flexibility with newlines in Markdown

# --- JSON, YAML, TOML Specific Settings ---
# These settings apply to configuration files.
[{*.json,*.yaml,*.yml,*.toml}]
indent_style = space
indent_size = 2       # Common for JSON/YAML/TOML, but can be 4 if preferred.
                      # Note: pyproject.toml is TOML, typically 2 or 4.

# --- Shell Script Specific Settings ---
[*.sh]
indent_style = space
indent_size = 4       # Common for shell scripts

# --- Dockerfile Specific Settings ---
[Dockerfile]
indent_style = space
indent_size = 4       # Common for Dockerfiles

# --- JavaScript/TypeScript/React (Frontend) Specific Settings ---
# These settings apply to frontend files.
[{*.js,*.jsx,*.ts,*.tsx}]
indent_style = space
indent_size = 2       # Standard for modern JavaScript/TypeScript projects (e.g., Next.js, React)

# --- CSS/Sass/Less Specific Settings ---
[{*.css,*.scss,*.less}]
indent_style = space
indent_size = 2       # Standard for CSS and preprocessor files
