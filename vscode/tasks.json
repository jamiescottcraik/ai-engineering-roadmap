{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "brAInwav: 1. Fetch Secrets (Run First)",
      "type": "shell",
      "command": "./scripts/fetch_secrets.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "brAInwav: 2. Install Dependencies",
      "type": "shell",
      "command": "uv sync",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "brAInwav: Run All Tests",
      "type": "shell",
      "command": "uv run pytest tests/ -v",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": ["$python"]
    },
    {
      "label": "brAInwav: Format & Lint Code",
      "type": "shell",
      "command": "uv run black . && uv run ruff check . --fix",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "brAInwav: Type Check with MyPy",
      "type": "shell",
      "command": "uv run mypy src/",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$mypy"]
    },
    {
      "label": "brAInwav: Start NiceGUI Dev Server",
      "type": "shell",
      "command": "uv run python src/brAInwav/ui/nicegui_dashboard.py",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "brAInwav: Test TensorFlow (Specific)",
      "type": "shell",
      "command": "uv run python tests/test_tensorflow.py",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "brAInwav: Test AI Providers (Specific)",
      "type": "shell",
      "command": "uv run python tests/test_ai_providers.py",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
